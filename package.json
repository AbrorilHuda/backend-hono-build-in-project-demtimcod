{
  "name": "learn-hono-bun",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "db:migrate": "bunx prisma migrate dev --name init",
    "db:reset": "bunx prisma migrate reset",
    "db:studio": "bunx prisma studio --browser none",
    "db:debug": "bunx prisma debug",
    "generate:secret": "bun run scripts/*.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "hono": "^4.6.14",
    "prisma": "^6.1.0"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}
